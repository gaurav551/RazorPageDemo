@page
@model RazorConstruction.Areas.Admin.Pages.Projects.ViewModel

 <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Projects</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 1%">
                          #
                      </th>
                      <th style="width: 20%">
                          Project Name
                      </th>
                      <th style="width: 30%">
                         Image
                      </th>
                     
                      <th style="width: 8%" class="text-center">
                          Status
                      </th>
                      <th style="width: 20%">
                      </th>
                  </tr>
              </thead>
              <tbody>
                  @foreach (var x in Model.Projects)
                  {
                      
                  
                  <tr>
                      <td>
                          #
                      </td>
                      <td>
                          <a>
                              @x.Name
                          </a>
                         
                         
                      </td>
                      <td>
                          <ul class="list-inline">
                              <li class="list-inline-item">
                                  <img alt="Avatar" class="table-avatar" src="/projects/@x.PhotoUrl">
                              </li>
                             
                          </ul>
                      </td>
                     
                      <td class="project-state">
                          <span class="badge badge-success">@x.Status</span>
                      </td>
                      <td class="project-actions text-right">
                          <a asp-page="/Projects/Project" asp-route-id="@x.Id" class="btn btn-primary btn-sm">
                              <i class="fas fa-folder">
                              </i>
                              View
                          </a>
                         
                          <a class="btn btn-danger btn-sm" asp-page="/Projects/Delete" asp-route-id="@x.Id">
                              <i class="fas fa-trash">
                              </i>
                              Delete
                          </a>
                      </td>
                  </tr>
                  }
                
              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>