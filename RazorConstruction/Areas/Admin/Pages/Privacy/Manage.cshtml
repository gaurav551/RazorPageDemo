@page
@model RazorConstruction.Areas.Admin.Pages.Privacy.ManageModel
@if(Model.Message!=null)
{
<div class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    @Model.Message
</div>
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Manage Privacy Policy </h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->

    <form method="POST">
        <div class="card-body">
            <div class="form-group">


                <label asp-for="Privacy.Policy">Your Privacy Policy</label>
                <input type="hidden" asp-for="Privacy.Id">
                <textarea asp-for="Privacy.Policy" class="form-control" rows="12"></textarea>

                <span asp-validation-for="Privacy.Policy" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>