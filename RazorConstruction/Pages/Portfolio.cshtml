@page "/portfolio"
@model RazorConstruction.Pages.PortfolioModel
<div >
             <!-- page-title-area start -->
            <div class="page-title-area pt-160 pb-10" style="background-image: url(img/bg/page-title.jpg)">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="page-title text-center">
                                <h1>Portfolio</h1>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- page-title-area end -->
            <!-- portfolio-area start -->
           <div class="portfolio-area pt-100 pb-100">
                <div class="container-full">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="section-title section-title-2 text-center mb-50">
                                <h2>Recent Projects</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="portfolio-menu mb-40 text-center">
                                <button class="active" data-filter="*">ALL</button>
                                <button data-filter=".Building">BUILDINGS</button>
                               
                                <button data-filter=".House">HOUSE</button>
                                <button data-filter=".Interior">INTERIOR</button>
                                <button data-filter=".Office">OFFICE</button>
                                 <button data-filter=".Othersw">Others</button>
                            </div>
                        </div>
                    </div>
                    <div class="row no-gutters grid">
                        @foreach (var x in Model.Projects)
                        {
                            
                        
                        <div class="col-xl-4 col-lg-4 col-md-6 grid-item @x.Category">
                            <div class="portfolio-wrapper">
                                <div class="portfolio-thumb">
                                    <img src="/projects/@x.PhotoUrl" alt="" width="200px" height="300px">
                                </div>
                                <div class="portfolio-content">
                                    <div class="icon"><a class="popup-img" href="img/portfolio/full/img1.jpg"><span></span></a></div>
                                    <h3><a href="#">@x.Name</a></h3>
                                    <span>@x.Category</span>
                                </div>
                            </div>
                        </div>
                        }
                    
                    </div>
                    <div class="row no-gutters">
                       <div class="col-xl-12">
                            <div class="videw-project text-center mt-50">
                                <a href="#" class="btn brand-btn">ALL PROJECTS</a>
                            </div>
                       </div>
                    </div>
                </div>
            </div>
            <!-- portfolio-area end -->
            
            <!-- portfolio-area end -->
            <!-- counter-area start -->
            <div class="counter-area pt-75 pb-45">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-3 col-lg-3 col-md-3">
                            <div class="single-couter text-center mb-30">
                                <img src="img/counter/theme-icon1.png" alt="">
                                <span class="counter">5120</span>
