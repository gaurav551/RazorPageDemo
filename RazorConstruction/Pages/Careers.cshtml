@page "/careers"
@model RazorConstruction.Pages.CareersModel
<div >
             <!-- page-title-area start -->
            <div class="page-title-area pt-160 pb-10" style="background-image: url(img/bg/page-title.jpg)">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="page-title text-center">
                                <h1>Careers</h1>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- page-title-area end -->
            <!-- careers-area start -->
           <div class="careers-area pt-100 pb-60">
               <div class="container">
                   <div class="row pb-60">
                       <div class="col-xl-4 col-lg-4">
                           <div class="why-chose text-center mb-40">
                                <i class="fas fa-utensils"></i>
                               <h2>Catered Meals</h2>
                               
                           </div>
                       </div>
                       <div class="col-xl-4 col-lg-4">
                           <div class="why-chose text-center mb-40">
                                <i class="fas fa-briefcase"></i>
                               <h2>Company Offsites</h2>
                               
                           </div>
                       </div>
                       <div class="col-xl-4 col-lg-4">
                           <div class="why-chose text-center mb-40">
                                <i class="fas fa-umbrella"></i>
                               <h2>Wellness Allowance</h2>
                               
                           </div>
                       </div>
                   </div>
                   <div class="row ">
                       <div class="col-xl-4 col-lg-4">
                           <div class="job-list gray-bg">
                               <h3>Job Title</h3>
                               <ul>
                                   @foreach (var x in Model.Jobs)
                                   {
                                       
                                   
                                   <li><a asp-page="/careers" asp-route-id="@x.Id">@x.Title</a></li>
                                   }
                                  
                               </ul>
                           </div>
                       </div>
                       <div class="col-xl-8 col-lg-8">
                            <div class="job-desc mb-60">
                               <h2>Job Title</h2>
                               <p>@Model.Job.Title</p>
                           </div>
                           <div class="job-desc mb-60">
                               <h2>Job Summary</h2>
                               <p>@Model.Job.Description</p>
                           </div>
                           
                           <div class="job-desc mb-40">
                               <h2>Requirements</h2>
                               <p>@Model.Job.Requirement</p>
                                   
                               <div class="cv-sned">
                                  <p><span>Please, send your CV to </span> @Model.Message</p>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
            <!-- careers-area end -->